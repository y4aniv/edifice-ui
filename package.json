{
  "name": "root",
  "private": true,
  "description": "Edifice UI Frontend Library",
  "homepage": "https://github.com/opendigitaleducation/edifice-ui#readme",
  "bugs": {
    "url": "https://github.com/opendigitaleducation/edifice-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opendigitaleducation/edifice-ui.git"
  },
  "license": "AGPL-3.0",
  "author": "Edifice",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "check:components": "package-check --cwd=packages/components",
    "check:core": "package-check --cwd=packages/core",
    "check:hooks": "package-check --cwd=packages/hooks",
    "check:icons": "package-check --cwd=packages/icons",
    "clean": "rm -rf */**/node_modules && rm -rf node_modules && rm -f pnpm-lock.yaml && rm -rf */**/dist && rm -rf packages/**/.turbo",
    "clean:dist": "rm -rf */**/dist",
    "clean:lock": "rm -f pnpm-lock.yaml",
    "clean:modules": "rm -rf */**/node_modules",
    "clean:storybook": "rm -rf dist",
    "clean:turbo": "rm -rf packages/**/.turbo",
    "docs": "storybook dev -p 6006",
    "docs:build": "storybook build --docs -o dist/ && cp -R packages/icons/assets/ dist/icons/",
    "docs:preview": "npx http-server ./dist",
    "fix": "turbo run fix",
    "format": "turbo run format",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm build",
    "lint": "turbo run lint",
    "pre-commit": "pnpm lint && pnpm format",
    "prepare": "husky install",
    "publish-packages": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@edifice-ui/icons": "workspace:*",
    "@skypack/package-check": "0.2.2",
    "@storybook/addon-a11y": "7.6.6",
    "@storybook/addon-essentials": "7.6.6",
    "@storybook/addon-interactions": "7.6.6",
    "@storybook/addon-links": "7.6.6",
    "@storybook/blocks": "7.6.6",
    "@storybook/manager-api": "7.6.6",
    "@storybook/react": "7.6.6",
    "@storybook/react-vite": "7.6.6",
    "@storybook/testing-library": "0.2.2",
    "@storybook/theming": "7.6.6",
    "@turbo/gen": "1.11.2",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "@vitejs/plugin-react": "4.2.1",
    "@vitejs/plugin-react-swc": "3.5.0",
    "eslint": "8.56.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "0.6.15",
    "husky": "8.0.3",
    "lerna": "8.0.1",
    "prettier": "3.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup-plugin-visualizer": "5.11.0",
    "storybook": "7.6.6",
    "turbo": "1.11.2",
    "typescript": "5.3.3",
    "vite": "4.5.1",
    "vite-plugin-dts": "3.6.4"
  },
  "packageManager": "pnpm@8.6.6",
  "engines": {
    "node": "18"
  }
}